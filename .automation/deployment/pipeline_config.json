{
  "pipeline": {
    "name": "MarsBook CI/CD Pipeline",
    "version": "1.0.0",
    "description": "Automated build, test, and deployment pipeline for MarsBook creative writing project"
  },
  "build": {
    "enabled": true,
    "formats": ["txt", "docx", "epub"],
    "outputPath": "print_output",
    "cleanBeforeBuild": true
  },
  "test": {
    "enabled": true,
    "types": [
      "content-quality",
      "character-consistency", 
      "plot-analysis",
      "format-check",
      "style-check"
    ],
    "failOnErrors": false,
    "generateReports": true
  },
  "quality": {
    "enabled": true,
    "checks": [
      "markdown-formatting",
      "writing-style",
      "content-consistency",
      "character-development",
      "plot-coherence"
    ],
    "thresholds": {
      "styleScore": 70,
      "maxRepetitiveWords": 5,
      "maxLongSentences": 10,
      "maxPassiveVoice": 5
    }
  },
  "deployment": {
    "targets": {
      "local": {
        "enabled": true,
        "path": "C:\\Books\\MarsBook",
        "autoCreate": true
      },
      "github": {
        "enabled": true,
        "repository": "marsbook",
        "branch": "main",
        "autoCommit": true
      },
      "website": {
        "enabled": false,
        "url": "https://marsbook.example.com",
        "method": "ftp"
      }
    },
    "triggers": {
      "onPush": true,
      "onSchedule": false,
      "manual": true
    }
  },
  "notifications": {
    "enabled": true,
    "channels": [
      "console",
      "file",
      "email"
    ],
    "email": {
      "enabled": false,
      "recipients": ["author@example.com"],
      "smtp": {
        "server": "smtp.example.com",
        "port": 587,
        "username": "noreply@example.com"
      }
    }
  },
  "backup": {
    "enabled": true,
    "beforeDeploy": true,
    "location": ".backup",
    "retention": 7
  },
  "monitoring": {
    "enabled": true,
    "metrics": [
      "build-time",
      "test-coverage",
      "quality-score",
      "deployment-success"
    ],
    "alerts": {
      "buildFailure": true,
      "testFailure": true,
      "qualityDegradation": true
    }
  }
}
