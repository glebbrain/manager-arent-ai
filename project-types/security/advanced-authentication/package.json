{
  "name": "advanced-authentication",
  "version": "2.5.0",
  "description": "Advanced Authentication System with Multi-Factor Authentication (MFA), Single Sign-On (SSO), and comprehensive security features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "lint": "eslint .",
    "security-scan": "npm audit && bandit -r . -f json",
    "build": "echo 'No build step required'",
    "docker:build": "docker build -t advanced-authentication .",
    "docker:run": "docker run -p 3012:3012 advanced-authentication"
  },
  "keywords": [
    "authentication",
    "mfa",
    "sso",
    "totp",
    "oauth",
    "saml",
    "jwt",
    "security",
    "multi-factor",
    "single-sign-on"
  ],
  "author": "Universal Automation Platform",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-plugin-security": "^1.7.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/universal-automation-platform/advanced-authentication.git"
  },
  "bugs": {
    "url": "https://github.com/universal-automation-platform/advanced-authentication/issues"
  },
  "homepage": "https://github.com/universal-automation-platform/advanced-authentication#readme"
}
