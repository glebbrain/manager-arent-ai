{
  "name": "zero-trust-architecture",
  "version": "2.5.0",
  "description": "Zero-Trust Architecture implementation with identity-centric security, device trust, and continuous monitoring",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "lint": "eslint .",
    "security-scan": "npm audit && bandit -r . -f json",
    "build": "echo 'No build step required'",
    "docker:build": "docker build -t zero-trust-architecture .",
    "docker:run": "docker run -p 3011:3011 zero-trust-architecture"
  },
  "keywords": [
    "zero-trust",
    "security",
    "identity-management",
    "device-trust",
    "access-control",
    "micro-segmentation",
    "continuous-monitoring",
    "trust-scoring"
  ],
