{
  "template": {
    "name": "Blockchain Project Template",
    "version": "1.0.0",
    "description": "Universal template for blockchain and Web3 projects",
    "type": "blockchain",
    "category": "web3",
    "tags": ["ethereum", "solidity", "web3", "hardhat", "typescript", "react"],
    "author": "ManagerAgentAI",
    "created": "2025-01-31",
    "lastUpdated": "2025-01-31"
  },
  "structure": {
    "directories": [
      "contracts",
      "contracts/interfaces",
      "contracts/libraries",
      "contracts/mocks",
      "scripts",
      "test",
      "test/unit",
      "test/integration",
      "frontend",
      "frontend/src",
      "frontend/src/components",
      "frontend/src/hooks",
      "frontend/src/utils",
      "frontend/src/contracts",
      "deployments",
      "deployments/localhost",
      "deployments/mainnet",
      "deployments/testnet",
      "docs",
      "scripts",
      "config"
    ],
    "files": [
      "package.json",
      "hardhat.config.ts",
      "tsconfig.json",
      ".env.example",
      ".gitignore",
      "README.md",
      "contracts/Token.sol",
      "contracts/TokenVesting.sol",
      "contracts/interfaces/IToken.sol",
      "contracts/libraries/SafeMath.sol",
      "contracts/mocks/MockERC20.sol",
      "scripts/deploy.ts",
      "scripts/verify.ts",
      "scripts/upgrade.ts",
      "test/Token.test.ts",
      "test/TokenVesting.test.ts",
      "frontend/package.json",
      "frontend/src/App.tsx",
      "frontend/src/components/ConnectWallet.tsx",
      "frontend/src/components/TokenBalance.tsx",
      "frontend/src/hooks/useWeb3.ts",
      "frontend/src/utils/contracts.ts",
      "frontend/src/contracts/Token.json",
      "deployments/README.md",
      "docs/ARCHITECTURE.md",
      "docs/DEPLOYMENT.md",
      "scripts/deploy-all.js",
      "scripts/verify-all.js",
      "config/networks.json"
    ]
  },
  "dependencies": {
    "production": [
      "hardhat",
      "@nomicfoundation/hardhat-toolbox",
      "@openzeppelin/contracts",
      "ethers",
      "web3",
      "react",
      "react-dom",
      "typescript",
      "@types/react",
      "@types/react-dom"
    ],
    "development": [
      "@nomicfoundation/hardhat-chai-matchers",
      "@nomicfoundation/hardhat-network-helpers",
      "@nomicfoundation/hardhat-verify",
      "@typechain/ethers-v5",
      "@typechain/hardhat",
      "chai",
      "ethereum-waffle",
      "hardhat-gas-reporter",
      "solidity-coverage",
      "typechain",
      "typescript"
    ]
  },
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "verify": "hardhat verify",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build"
  },
  "configuration": {
    "solidity_version": "0.8.19",
    "networks": ["localhost", "testnet", "mainnet"],
    "gas_reporter": true,
    "coverage": true,
    "typechain": true,
    "verify": true,
    "frontend": "react"
  },
  "features": {
    "smart_contracts": true,
    "testing": true,
    "deployment": true,
    "verification": true,
    "gas_optimization": true,
    "frontend": true,
    "web3_integration": true,
    "type_safety": true,
    "coverage": true,
    "upgradeable_contracts": false,
    "multi_sig": false,
    "governance": false,
    "defi": false,
    "nft": false,
    "dao": false
  }
}
