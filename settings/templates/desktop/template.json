{
  "template": {
    "name": "Desktop Application Template",
    "version": "1.0.0",
    "description": "Universal template for desktop applications with Electron",
    "type": "desktop",
    "category": "desktop",
    "tags": ["electron", "typescript", "react", "nodejs", "sqlite"],
    "author": "ManagerAgentAI",
    "created": "2025-01-31",
    "lastUpdated": "2025-01-31"
  },
  "structure": {
    "directories": [
      "src",
      "src/main",
      "src/renderer",
      "src/renderer/components",
      "src/renderer/pages",
      "src/renderer/hooks",
      "src/renderer/utils",
      "src/renderer/services",
      "src/renderer/types",
      "src/renderer/assets",
      "src/renderer/assets/images",
      "src/renderer/assets/styles",
      "src/shared",
      "src/shared/types",
      "src/shared/utils",
      "tests",
      "tests/main",
      "tests/renderer",
      "tests/integration",
      "docs",
      "scripts",
      "config",
      "build",
      "dist"
    ],
    "files": [
      "package.json",
      "tsconfig.json",
      "webpack.config.js",
      "babel.config.js",
      ".env.example",
      ".gitignore",
      "README.md",
      "src/main/main.ts",
      "src/main/preload.ts",
      "src/renderer/index.html",
      "src/renderer/index.tsx",
      "src/renderer/App.tsx",
      "src/renderer/components/Header.tsx",
      "src/renderer/components/Sidebar.tsx",
      "src/renderer/pages/Home.tsx",
      "src/renderer/pages/Settings.tsx",
      "src/renderer/hooks/useElectron.ts",
      "src/renderer/utils/helpers.ts",
      "src/renderer/services/ipcService.ts",
      "src/renderer/types/index.ts",
      "src/renderer/assets/styles/global.css",
      "src/shared/types/index.ts",
      "src/shared/utils/constants.ts",
      "tests/main/main.test.ts",
      "tests/renderer/App.test.tsx",
      "tests/integration/app.test.ts",
      "docs/API.md",
      "docs/BUILD.md",
      "scripts/build.js",
      "scripts/dev.js",
      "scripts/pack.js",
      "config/electron-builder.json"
    ]
  },
  "dependencies": {
    "production": [
      "electron",
      "typescript",
      "@types/node",
      "react",
      "react-dom",
      "@types/react",
      "@types/react-dom",
      "sqlite3",
      "electron-store",
      "electron-updater"
    ],
    "development": [
      "electron-builder",
      "concurrently",
      "wait-on",
      "cross-env",
      "webpack",
      "webpack-cli",
      "webpack-dev-server",
      "babel-loader",
      "@babel/core",
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript",
      "css-loader",
      "style-loader",
      "html-webpack-plugin",
      "jest",
      "@testing-library/react",
      "@testing-library/jest-dom",
      "eslint",
      "@typescript-eslint/parser",
      "@typescript-eslint/eslint-plugin",
      "prettier"
    ]
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "cross-env NODE_ENV=development electron .",
    "dev:renderer": "webpack serve --mode development",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --mode production",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,css}"
  },
  "configuration": {
    "electron_version": "25.0.0",
    "node_version": "18.0.0",
    "platforms": ["win32", "darwin", "linux"],
    "architectures": ["x64", "arm64"],
    "auto_updater": true,
    "code_signing": false,
    "notarization": false
  },
  "features": {
    "cross_platform": true,
    "auto_updater": true,
    "native_menus": true,
    "tray_support": true,
    "notifications": true,
    "file_system_access": true,
    "sqlite_database": true,
    "testing": true,
    "linting": true,
    "formatting": true,
    "hot_reload": true,
    "typescript": true,
    "react": true,
    "webpack": true,
    "code_signing": false,
    "notarization": false,
    "auto_installer": false
  }
}
